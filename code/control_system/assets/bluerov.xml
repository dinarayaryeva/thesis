<mujoco model="BlueRov2 Heavy">

  <compiler coordinate="local" angle="radian" autolimits="true" inertiafromgeom="false" assetdir="."/>

  <!-- contact="disable" energy enable -->

  <option timestep="0.01" integrator="RK4" density="1000" viscosity="0.0009" wind="0 0 0">
    <flag contact="disable"/>
  </option>

  <default>
    <default class="body">

      <default class="rotor">
          <site type="sphere" rgba="1 0 0 1" size=".03 .03 .01"/>
      </default>

    </default>
  </default>

  <asset>
    <!-- <texture type="2d" file="body_lowpoly_texture_SpinningProps_1024.png"/> -->
    <!-- <material name="phong3SG" texture="body_lowpoly_texture_SpinningProps_1024"/> -->
    <material name="invisible" rgba="1 0 0 0.1"/>
    <mesh name="body_mesh" class="body" file="bluerov_mjc.stl" scale="0.001 0.001 0.001"/>
  </asset>

  <worldbody>

    <light name="spotlight" mode="targetbodycom" target="body" pos="0 -1 20"/>


    <!-- fullinertia -->

    <geom type="plane" pos="0 0 -1" size="1 1 0.01" rgba="0 0 0.1 1"/>

    <body name="body" pos="0 0 0" childclass="body">

      <camera name="track" pos="0 0.21 -0.067" euler="3.14 0 1.57" mode="trackcom"/>

      <inertial pos="0 0 0" mass="12.5" diaginertia="0.17876 0.273365 0.323093"/>

      <joint type="free" stiffness="0" damping="0" frictionloss="0" armature="0"/>

      <!-- <limit lower="-40.18" upper="49.98"/> -->
      <!-- <axis xyz="1 0 0" -->

      <site name="imu" pos="0 0 0"/>

      <body name="buoyancy" pos="0 0 0.02"/>

      <geom type="mesh" mesh="body_mesh" quat="0.7071068 0 0 0.7071068"/>

      <geom name='box' type='box' size="0.228 0.218 0.126" rgba="1 0 0 0.1"/>

      <site name="rotor1" class="rotor" pos="0.12 -0.113875 0."/>
      <site name="rotor2" class="rotor" pos="0.12 0.113875 0."/>
      <site name="rotor3" class="rotor" pos="-0.12 -0.113875 0."/>
      <site name="rotor4" class="rotor" pos="-0.12 0.113875 0."/>
      <site name="rotor5" class="rotor" pos="0.12 -0.21805 .083787"/>
      <site name="rotor6" class="rotor" pos="0.12 0.21805 .083787"/>
      <site name="rotor7" class="rotor" pos="-0.12 -0.21805 .083787"/>
      <site name="rotor8" class="rotor" pos="-0.12 0.21805 .083787"/>

    </body>
  </worldbody>

  <actuator>
    <!-- ctrllimited="true" ctrlrange="-1 1" -->
    
    <motor class="body" name="thrust1" site="rotor1" gear="-0.7 0.7 0 0 0 0" ctrlrange="-50 50"/>
    <motor class="body" name="thrust2" site="rotor2" gear="-0.7 -0.7 0 0 0 0" ctrlrange="-50 50"/>
    <motor class="body" name="thrust3" site="rotor3" gear="0.7 0.7 0 0 0 0" ctrlrange="-50 50"/>
    <motor class="body" name="thrust4" site="rotor4" gear="0.7 -0.7 0 0 0 0" ctrlrange="-50 50"/>
    <motor class="body" name="thrust5" site="rotor5" gear="0 0 -1.0 0 0 0" ctrlrange="-50 50"/>
    <motor class="body" name="thrust6" site="rotor6" gear="0 0 1.0 0 0 0" ctrlrange="-50 50"/>
    <motor class="body" name="thrust7" site="rotor7" gear="0 0 -1.0 0 0 0" ctrlrange="-50 50"/>
    <motor class="body" name="thrust8" site="rotor8" gear="0 0 1.0 0 0 0" ctrlrange="-50 50"/>
    
  </actuator>

  <!-- <keyframe>
    <key name="hover" qpos="0 0 .3 1 0 0 0" ctrl="3.2495625 3.2495625 3.2495625 3.2495625"/>
  </keyframe> -->

  <sensor>
    <gyro name="body_gyro" site="imu"/>
    <accelerometer name="body_linacc" site="imu"/>
    <framequat name="body_quat" objtype="site" objname="imu"/>
  </sensor>

</mujoco>